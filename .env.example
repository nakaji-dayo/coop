# App
# COOP_DRYRUN=True              # uncomment for dryrun mode
# LOG_LEVEL=INFO                # DEBUG, INFO, WARNING, ERROR (default: INFO)
SLACK_SOCKET_MODE=True           # True = SocketMode, omit or False = Webhook

# Slack
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=
SLACK_BOT_USER_ID=
SLACK_MONITORED_USER_ID=
SLACK_NOTIFY_CHANNEL=
SLACK_APP_TOKEN=xapp-...
# SLACK_CATCHUP_CHANNELS=C123,C456   # Comma-separated channel IDs for offline catch-up (empty = skip)

# LLM
# LLM_BACKEND=Claude               # "Claude" (default) or "OpenAI"
CLAUDE_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...             # Required when LLM_BACKEND=OpenAI
# OPENAI_MODEL=gpt-4o              # Optional, defaults to gpt-4o

# Notion
NOTION_API_KEY=ntn_...
NOTION_TASK_DATABASE_ID=
NOTION_GUIDELINES_PAGE_ID=
NOTION_INSTRUCTIONS_PAGE_ID=
# NOTION_PROP_NAME=Name                  # Task title property (default: Name)
# NOTION_PROP_PRIORITY=Priority          # Priority select property (default: Priority)
# NOTION_PROP_STATUS=Status              # Status select property (default: Status)
# NOTION_PROP_DUE_DATE=Due Date          # Date property for due date (empty = skip)
# NOTION_STATUS_OPEN=Open                # Status value for open tasks (default: Open)
# NOTION_STATUS_IN_PROGRESS=In Progress  # Status value for in-progress (default: In Progress)
# NOTION_STATUS_DONE=Done                # Status value for done tasks (default: Done)
# NOTION_PROP_ASSIGNEE=Assignee          # People property name (empty = skip)
# NOTION_ASSIGNEE_USER_ID=               # Notion user UUID for assignee
# NOTION_PROP_ESTIMATE=Estimate          # Rich text property for estimate (empty = skip)

# Google Calendar (optional â€” leave empty to disable)
# GOOGLE_CLIENT_ID=...                  # OAuth 2.0 Client ID
# GOOGLE_CLIENT_SECRET=...              # OAuth 2.0 Client Secret
# GOOGLE_CALENDAR_ID=primary            # Calendar ID (default: "primary")
# GOOGLE_TOKEN_PATH=~/.config/coop/google-token.json  # Token storage path

# Scheduler
# SCHEDULER_BRIEFING_CRON=0 9 * * *           # Cron for daily briefing ("-" to disable)
# SCHEDULER_WEEKLY_BRIEFING_CRON=0 9 * * 1    # Cron for weekly briefing ("-" to disable, default: "-")
